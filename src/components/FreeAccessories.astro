---
// src/components/FreeAccessories.astro
// Simple accessories display - no descriptions, no prices
---

<section class="py-20 bg-white">
    <div class="container mx-auto px-6">
        <!-- Section Header -->
        <div class="text-center max-w-2xl mx-auto mb-12">
            <h2 class="text-3xl font-bold text-gray-900 mb-4">
                Free Accessories Included
            </h2>
            <p class="text-lg text-gray-600">
                Every iPhone purchase comes with a complete accessory kit.
            </p>
        </div>

        <!-- Simple Accessories Grid -->
        <div class="grid grid-cols-2 md:grid-cols-4 gap-6 max-w-3xl mx-auto">
            <!-- Fast Charger -->
            <div class="group bg-gray-50 rounded-xl p-6 hover:bg-white hover:shadow-lg transition-all duration-300 border border-gray-100">
                <div class="flex flex-col items-center">
                    <div class="w-20 h-20 mb-4 flex items-center justify-center">
                        <img src="/images/accessories/charger.jpg" alt="Fast Charger" class="w-full h-full object-contain">
                    </div>
                    <h3 class="text-lg font-medium text-gray-900">Fast Charger</h3>
                </div>
            </div>

            <!-- Phone Case -->
            <div class="group bg-gray-50 rounded-xl p-6 hover:bg-white hover:shadow-lg transition-all duration-300 border border-gray-100">
                <div class="flex flex-col items-center">
                    <div class="w-20 h-20 mb-4 flex items-center justify-center">
                        <img src="/images/accessories/case.jpg" alt="Phone Case" class="w-full h-full object-contain">
                    </div>
                    <h3 class="text-lg font-medium text-gray-900">Phone Case</h3>
                </div>
            </div>

            <!-- Screen Protector -->
            <div class="group bg-gray-50 rounded-xl p-6 hover:bg-white hover:shadow-lg transition-all duration-300 border border-gray-100">
                <div class="flex flex-col items-center">
                    <div class="w-20 h-20 mb-4 flex items-center justify-center">
                        <img src="/images/accessories/screen-protector.jpg" alt="Screen Protector" class="w-full h-full object-contain">
                    </div>
                    <h3 class="text-lg font-medium text-gray-900">Screen Protector</h3>
                </div>
            </div>

            <!-- Ear Pod -->
            <div class="group bg-gray-50 rounded-xl p-6 hover:bg-white hover:shadow-lg transition-all duration-300 border border-gray-100">
                <div class="flex flex-col items-center">
                    <div class="w-20 h-20 mb-4 flex items-center justify-center">
                        <img src="/images/accessories/earpods.jpg" alt="Ear Pod" class="w-full h-full object-contain">
                    </div>
                    <h3 class="text-lg font-medium text-gray-900">Ear Pod</h3>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Student Deals Hero Section -->
<section class="relative overflow-hidden bg-gradient-to-r from-purple-900 via-blue-800 to-indigo-900">
    <div class="container mx-auto px-6 py-16 md:py-24">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
            <!-- Text Content -->
            <div class="text-white z-10">
                <div class="inline-block bg-white/10 backdrop-blur-sm rounded-full px-6 py-2 mb-6">
                    <span class="text-sm font-semibold">EXCLUSIVE OFFER</span>
                </div>
                <h2 class="text-4xl md:text-5xl font-bold mb-6 leading-tight">
                    Special Student<br>
                    <span class="text-yellow-400">Deals & Discounts</span>
                </h2>
                <p class="text-lg md:text-xl text-gray-200 mb-8 leading-relaxed">
                    Show your student ID and get exclusive discounts on all iPhones. 
                    Perfect for students who need reliable devices for their studies.
                </p>
                <div class="space-y-4 mb-8">
                    <div class="flex items-center">
                        <div class="w-8 h-8 rounded-full bg-green-500 flex items-center justify-center mr-4">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-white" viewBox="0 0 20 20" fill="currentColor">
                                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                            </svg>
                        </div>
                        <span class="text-lg">Extra 5% discount with student ID</span>
                    </div>
                    <div class="flex items-center">
                        <div class="w-8 h-8 rounded-full bg-green-500 flex items-center justify-center mr-4">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-white" viewBox="0 0 20 20" fill="currentColor">
                                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                            </svg>
                        </div>
                        <span class="text-lg">Extended 6-month warranty</span>
                    </div>
                    <div class="flex items-center">
                        <div class="w-8 h-8 rounded-full bg-green-500 flex items-center justify-center mr-4">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-white" viewBox="0 0 20 20" fill="currentColor">
                                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                            </svg>
                        </div>
                        <span class="text-lg">Free screen protector replacement</span>
                    </div>
                </div>
                <div class="flex flex-col sm:flex-row gap-4">
                    <a 
                        href="/products"
                        class="inline-flex items-center justify-center bg-white text-purple-900 font-semibold px-8 py-4 rounded-xl hover:bg-gray-100 transition-all shadow-lg hover:shadow-xl"
                    >
                        Browse Student Offers
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2" viewBox="0 0 20 20" fill="currentColor">
                            <path fill-rule="evenodd" d="M10.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L12.586 11H5a1 1 0 110-2h7.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
                        </svg>
                    </a>
                    <a 
                        href="https://wa.me/27796353542?text=Hi,%20I'm%20a%20student%20interested%20in%20your%20student%20deals"
                        target="_blank"
                        class="inline-flex items-center justify-center bg-transparent border-2 border-white text-white font-semibold px-8 py-4 rounded-xl hover:bg-white/10 transition-all"
                    >
                        Ask About Student Discount
                    </a>
                </div>
            </div>

            <!-- Image Section -->
            <div class="relative">
                <div class="relative rounded-2xl overflow-hidden shadow-2xl transform hover:scale-[1.02] transition-transform duration-500">
                    <!-- Mobile-optimized image -->
                    <img 
                        src="/images/studentdeals.jpg" 
                        alt="Student Deals" 
                        class="w-full h-auto object-cover"
                        loading="lazy"
                        width="1024"
                        height="523"
                        onerror="this.style.display='none'; document.getElementById('image-fallback').style.display='block'"
                    />
                    <!-- Fallback in case image doesn't load -->
                    <div id="image-fallback" class="hidden bg-gradient-to-r from-blue-600 to-purple-700 w-full aspect-[1024/523] flex items-center justify-center">
                        <div class="text-center text-white p-8">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-16 w-16 mx-auto mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l9-5-9-5-9 5 9 5z" />
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14z" />
                            </svg>
                            <h3 class="text-2xl font-bold mb-2">Student Deals</h3>
                            <p class="text-lg">Exclusive discounts for students</p>
                        </div>
                    </div>
                </div>
                
                <!-- Decorative elements -->
                <div class="absolute -top-6 -right-6 w-24 h-24 bg-yellow-400 rounded-full opacity-20"></div>
                <div class="absolute -bottom-6 -left-6 w-32 h-32 bg-blue-400 rounded-full opacity-20"></div>
            </div>
        </div>
    </div>

    <!-- Wave decoration at bottom -->
    <div class="absolute bottom-0 left-0 right-0">
        <svg viewBox="0 0 1200 120" preserveAspectRatio="none" class="w-full h-auto">
            <path d="M0,0V46.29c47.79,22.2,103.59,32.17,158,28,70.36-5.37,136.33-33.31,206.8-37.5C438.64,32.43,512.34,53.67,583,72.05c69.27,18,138.3,24.88,209.4,13.08,36.15-6,69.85-17.84,104.45-29.34C989.49,25,1113-14.29,1200,52.47V0Z" opacity=".25" fill="white"></path>
            <path d="M0,0V15.81C13,36.92,27.64,56.86,47.69,72.05,99.41,111.27,165,111,224.58,91.58c31.15-10.15,60.09-26.07,89.67-39.8,40.92-19,84.73-46,130.83-49.67,36.26-2.85,70.9,9.42,98.6,31.56,31.77,25.39,62.32,62,103.63,73,40.44,10.79,81.35-6.69,119.13-24.28s75.16-39,116.92-43.05c59.73-5.85,113.28,22.88,168.9,38.84,30.2,8.66,59,6.17,87.09-7.5,22.43-10.89,48-26.93,60.65-49.24V0Z" opacity=".5" fill="white"></path>
            <path d="M0,0V5.63C149.93,59,314.09,71.32,475.83,42.57c43-7.64,84.23-20.12,127.61-26.46,59-8.63,112.48,12.24,165.56,35.4C827.93,77.22,886,95.24,951.2,90c86.53-7,172.46-45.71,248.8-84.81V0Z" fill="white"></path>
        </svg>
    </div>
</section>

<style>
    /* Mobile-specific optimizations */
    @media (max-width: 768px) {
        .student-deals-section {
            padding-left: 1rem;
            padding-right: 1rem;
        }
        
        .student-deals-section h2 {
            font-size: 2rem;
            line-height: 1.2;
        }
        
        .student-deals-section p {
            font-size: 1rem;
            line-height: 1.5;
        }
        
        /* Ensure image doesn't overflow on mobile */
        .student-deals-section img {
            max-width: 100%;
            height: auto;
            border-radius: 1rem;
        }
        
        /* Stack buttons vertically on mobile */
        .student-deals-section .flex {
            flex-direction: column;
        }
        
        .student-deals-section a {
            width: 100%;
            text-align: center;
        }
    }
    
    /* Smooth image loading */
    .student-image-container {
        position: relative;
        overflow: hidden;
    }
    
    .student-image-container img {
        transition: transform 0.5s ease;
    }
    
    .student-image-container:hover img {
        transform: scale(1.05);
    }
</style>