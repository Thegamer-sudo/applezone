---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<!-- Add gradient styles -->
<style>
    .gradient-bg {
        background: linear-gradient(90deg, #8B5CF6 0%, #EC4899 50%, #3B82F6 100%);
    }
    
    .gradient-text {
        background: linear-gradient(90deg, #8B5CF6 0%, #EC4899 50%, #3B82F6 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }
    
    .service-card {
        transition: all 0.3s ease;
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(10px);
    }
    
    .service-card:hover {
        transform: translateY(-8px);
        box-shadow: 0 20px 40px rgba(139, 92, 246, 0.2);
        background: rgba(255, 255, 255, 1);
    }
    
    .icon-hover {
        transition: all 0.3s ease;
    }
    
    .service-card:hover .icon-hover {
        transform: scale(1.1) rotate(5deg);
    }
    
    .pulse-animation {
        animation: pulse 2s infinite;
    }
    
    @keyframes pulse {
        0% { transform: scale(1); }
        50% { transform: scale(1.05); }
        100% { transform: scale(1); }
    }
    
    .step-circle {
        transition: all 0.3s ease;
    }
    
    .step-circle:hover {
        transform: scale(1.1);
        box-shadow: 0 10px 20px rgba(139, 92, 246, 0.3);
    }
    
    /* Page Background */
    .page-background {
        background: 
            linear-gradient(rgba(255, 255, 255, 0.2), rgba(255, 255, 255, 0.1)),
    url('/images/repairs.jpg');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        background-attachment: fixed;
        min-height: 100vh;
    }
    
    /* Content container with slight transparency */
    .content-container {
        background: rgba(255, 255, 255, 0.85);
        backdrop-filter: blur(5px);
        border-radius: 2rem;
    }
    
    /* Remove background from specific sections */
    .process-section {
        background: rgba(248, 250, 252, 0.9);
        backdrop-filter: blur(10px);
    }
    
    @media (max-width: 768px) {
        .page-background {
            background-attachment: scroll;
        }
    }
</style>

<BaseLayout>
    <div class="page-background">
        <div class="container mx-auto px-4 pt-24 pb-20">
            <div class="max-w-6xl mx-auto">
                <!-- Hero Section -->
                <div class="text-center mb-16 content-container py-12 px-8">
                    <h1 class="text-4xl font-bold text-gray-900 mb-6">
                        iPhone <span class="gradient-text">Repair Services</span>
                    </h1>
                    <p class="text-xl text-gray-600 max-w-3xl mx-auto">Expert iPhone repairs with genuine parts and professional service</p>
                </div>
                
                <!-- Services Grid -->
                <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-16">
                    <!-- Screen Replacement -->
                    <div class="service-card rounded-2xl p-8 shadow-lg border border-gray-100 text-center">
                        <div class="h-16 w-16 rounded-full bg-gradient-to-br from-purple-100 to-pink-100 flex items-center justify-center mx-auto mb-6 icon-hover">
                            <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="url(#gradient)" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <defs>
                                    <linearGradient id="gradient" x1="0%" y1="0%" x2="100%" y2="100%">
                                        <stop offset="0%" style="stop-color:#8B5CF6" />
                                        <stop offset="50%" style="stop-color:#EC4899" />
                                        <stop offset="100%" style="stop-color:#3B82F6" />
                                    </linearGradient>
                                </defs>
                                <rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect>
                                <line x1="3" y1="9" x2="21" y2="9"></line>
                                <line x1="9" y1="21" x2="9" y2="9"></line>
                            </svg>
                        </div>
                        <h3 class="text-xl font-semibold text-gray-900 mb-4">Screen Replacement</h3>
                        <p class="text-gray-600">Cracked or damaged screen? We replace with high-quality displays.</p>
                    </div>
                    
                    <!-- Battery Replacement -->
                    <div class="service-card rounded-2xl p-8 shadow-lg border border-gray-100 text-center">
                        <div class="h-16 w-16 rounded-full bg-gradient-to-br from-blue-100 to-purple-100 flex items-center justify-center mx-auto mb-6 icon-hover">
                            <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="url(#gradient2)" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <defs>
                                    <linearGradient id="gradient2" x1="0%" y1="0%" x2="100%" y2="100%">
                                        <stop offset="0%" style="stop-color:#3B82F6" />
                                        <stop offset="50%" style="stop-color:#8B5CF6" />
                                        <stop offset="100%" style="stop-color:#EC4899" />
                                    </linearGradient>
                                </defs>
                                <path d="M12 2a10 10 0 1 0 10 10H12V2z"></path>
                                <path d="M12 2a10 10 0 0 1 10 10H12V2z"></path>
                            </svg>
                        </div>
                        <h3 class="text-xl font-semibold text-gray-900 mb-4">Battery Replacement</h3>
                        <p class="text-gray-600">Slow battery or quick drainage? Get a fresh battery installed.</p>
                    </div>
                    
                    <!-- Water Damage Repair -->
                    <div class="service-card rounded-2xl p-8 shadow-lg border border-gray-100 text-center">
                        <div class="h-16 w-16 rounded-full bg-gradient-to-br from-pink-100 to-blue-100 flex items-center justify-center mx-auto mb-6 icon-hover">
                            <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="url(#gradient3)" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <defs>
                                    <linearGradient id="gradient3" x1="0%" y1="0%" x2="100%" y2="100%">
